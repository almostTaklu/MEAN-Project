<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body>
    <% include ./partials/navbar %>
    <div class="container mt-4">
        <h1 class="title-spacing"><%= title %></h1>
        <div class="row">
            <% if (Array.isArray(blogs) && blogs.length > 0) { %>
                <% blogs.forEach((blog) => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title"><%= blog.blogTitle %></h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><%= blog.blogText %></p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <span class="posted-date">Posted on <%= new Date(blog.createdOn).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %> at <%= new Date(blog.createdOn).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %></span>
                                <div>
                                    <a href="/blogEdit/<%= blog._id %>" class="icon-link" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/blogDelete/<%= blog._id %>" class="icon-link" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <p>There are no posts yet. <a href="/blogAdd">Click here</a> to add a new post.</p>
                </div>
            <% } %>
        </div>
    </div>
    <% include ./partials/scripts %>
</body>
</html>
